<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- QWeb Reports -->
    <report
        id="report_purchase_book_ab"
        string="Purchase Book"
        model="wizard.ventas.compras"
        report_type="qweb-pdf"
        name="report_ventas_compras.report_purchase_book"
        file="report_ventas_compras.report_purchase_book"
        menu="False"/>

    <record id="report_purchase_book_ab_format" model="report.paperformat">
            <field name="name">Libro de Compras PDF</field>
            <field name="default" eval="True"/>
            <field name="format">Legal</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">2</field>
            <field name="margin_bottom">1</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">40</field>
            <field name="dpi">90</field>
            <field name="report_ids" eval="[(4, ref('report_purchase_book_ab'))]"/>
        </record>
    <report
        id="report_sale_book_ab"
        string="Sale Book"
        model="wizard.ventas.compras"
        report_type="qweb-pdf"
        name="report_ventas_compras.report_sale_book"
        file="report_ventas_compras.report_sale_book"
        menu="False"/>
    
    <record id="report_sale_book_ab_format" model="report.paperformat">
            <field name="name">Libro de Ventas PDF</field>
            <field name="default" eval="True"/>
            <field name="format">Legal</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">2</field>
            <field name="margin_bottom">1</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">40</field>
            <field name="dpi">90</field>
            <field name="report_ids" eval="[(4, ref('report_sale_book_ab'))]"/>
        </record>


</odoo>
